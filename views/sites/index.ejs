<!-- Portfolio Grid-->
<section class="page-section bg-light" id="buku">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Buku Terbaru</h2>
            <h3 class="section-subheading text-muted">Klik tombol daftar buku untuk lebih banyak lagi</h3>
        </div>

        <center>
            <div class="row">
                <% if(buku) { %>
                <% buku.forEach((datbuk) => { %>
                <div class="col-lg-4 col-sm-6 mb-4">
                    <div class="portfolio-item">
                        <p class="portfolio-link" data-toggle="" href="">

                            <img src="/buku/<%= datbuk.cover %>" width="180" height="200" alt="tidak ada gambar">
                        </p>
                        <div class="portfolio-caption">
                            <div class="portfolio-caption-heading"><%= datbuk.judul %></div>
                            <div class="portfolio-caption-subheading text-muted"><%= datbuk.pengarang %></div>
                        </div>
                    </div>
                </div>

                <% }) %>
                <% } %>
            </div>
        </center>
        <br>
        <center>
            <a href="/umum/buku" class="btn btn-primary">Daftar Buku</a>
        </center>
    </div>
</section>


