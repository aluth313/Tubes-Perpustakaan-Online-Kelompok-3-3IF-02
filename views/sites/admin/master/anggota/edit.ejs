<%- include ('../../../../partials/admin/header') -%>

<title>Home</title>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edit Anggota</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/admin/anggota">Anggota</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <div class="card-body">
        <form role="form" action="/admin/anggota/update/<%= data.id %>" method="POST">
            <div class="row">
                <div class="col-sm-7">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Nama</label>
                        <input type="text" class="form-control" name="namaAnggota" value="<%= data.nama %>">
                    </div>
                </div>
                <div class="col-sm-7">
                    <!-- text input -->
                    <div class="form-group">
                        <label>NIK</label>
                        <input type="text" class="form-control" name="nikAnggota" value="<%= data.nik %>">
                    </div>
                </div>
                <div class="col-sm-7">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="emailAnggota" value="<%= data.user.email %>">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-7">
                    <!-- textarea -->
                    <div class="form-group">
                        <label>Alamat</label>
                        <textarea class="form-control" name="alamatAnggota" rows="3" placeholder="Enter ..."><%= data.alamat %></textarea>
                    </div>
                </div>


                <div class="col-sm-7">
                    <!-- radio -->
                    <div class="form-group">
                        <label>Jenis Kelamin</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" value="Laki-laki" name="jkAnggota" <% if (data.jk == "Laki-laki") { %> checked <% } %>  >
                            <label class="form-check-label">Laki-laki</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" value="Perempuan" name="jkAnggota" <% if (data.jk == "Perempuan") { %> checked <% } %>>
                            <label class="form-check-label">Perempuan</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-7">
                <!-- text input -->
                <div class="form-group">
                    <label>Kota Lahir</label>
                    <input type="text" class="form-control" name="klAnggota" value="<%= data.kota_lahir %>">
                </div>
            </div>
            <div class="col-sm-7">
                <!-- text input -->
                <div class="form-group">
                    <label>Tanggal Lahir</label>
                    <input type="date" class="form-control" name="tlAnggota" value="<%= data.tgl_lahir %>">
                </div>
            </div>
            <div class="col-sm-7">
                <div class="form-group">
                    <label>Role</label>
                    <select name="role" id="role" class="form-control">
                        <option value="admin" <% if (data.user.role == 'admin') { %> selected <% } %> >Admin</option>
                        <option value="anggota" <% if (data.user.role == 'anggota') { %> selected <% } %>>Anggota</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-7">
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </form>
    </div>

    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- import data footer -->

<%- include ('../../../../partials/admin/footer') -%>