<%- include ('../../../../partials/admin/header') -%>

<title>Home</title>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="container">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Master Anggota</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item active">Anggota</li>
                        </ol>
                    </div>
                </div>

            </div><!-- /.container-fluid -->
        </section>
        <!-- Main content -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Belum Terverifikasi</h3>
                <!-- <a href="/admin/anggota/tambah" class="btn btn-success float-sm-right">Tambah Data</a> -->
            </div>
            <%   
            let no1 = 1;
            %>
            <!-- /.card-header -->
        <!-- <div class="container">
            <div class="col-sm-12">
            </div>
        </div> -->
        <div class="card-body">
            <table id="tabelVerifikasi" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>nik</th>
                        <th>Nama</th>
                        <th>Jenis Kelamin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(verifikasi) { %>
                    <% verifikasi.forEach((datagt) => { %>
                    <tr>
                        <td> <%= no1++ %> </td>
                        <td> <%= datagt.nik %> </td>
                        <td> <%= datagt.nama %> </td>
                        <td> <%= datagt.jk %> </td>
                        <td>
                            <form action="/admin/anggota/update-status/<%= datagt.id %>" method="post">
                                <a href="/admin/anggota/destroy/<%= datagt.id %>" class="btn btn-default" onclick="confirm('Anda yakin untuk menolaknya?')">Tolak</a>
                                <input type="submit" name="submit" onclick="confirm('Anda yakin untuk menerimanya?')" value="Terima" class="btn btn-default">
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Terverifikasi</h3>
            <a href="/admin/anggota/tambah" class="btn btn-success float-sm-right">Tambah Data</a>
        </div>
        <%   
        let no = 1;
        %>
        <!-- /.card-header -->
        <!-- <div class="container">
            <div class="col-sm-12">
            </div>
        </div> -->
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>nik</th>
                        <th>Nama</th>
                        <th>Jenis Kelamin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data) { %>
                    <% data.forEach((datagt) => { %>
                    <tr>
                        <td> <%= no++ %> </td>
                        <td> <%= datagt.nik %> </td>
                        <td> <%= datagt.nama %> </td>
                        <td> <%= datagt.jk %> </td>
                        <td>
                            <a href="/admin/anggota/destroy/<%= datagt.id %>" class="btn btn-default" onclick="confirm('Anda yakin untuk menghapusnya?')">Hapus</a>
                            <a href="/admin/anggota/<%= datagt.id %>" class="btn btn-default">Edit</a>
                        </td>
                    </tr>
                    <% }) %>
                    <% } %>
                </tbody>

            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.content -->
</div>
</div>
<!-- /.content-wrapper -->
<!-- import data footer -->

<%- include ('../../../../partials/admin/footer') -%>
<script type="text/javascript">
    $(document).ready(function() {
        $("#tabelVerifikasi").DataTable({
          "responsive": true,
          "autoWidth": false,
      });
        $('#master').addClass("menu-open");
        $('#anggota').addClass("active");
        $('#masterHref').addClass("active");
    })
</script>
</body>
</html>