<%- include ('../../../../partials/admin/header') -%>

<title>Home</title>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Tambah Detail Buku</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Blank Page</li>
                    </ol>
                </div>
            </div>

        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <div class="card-body">
        <form role="form" action="/admin/detail/tambah" method="POST">
            <div class="row">

                <div class="col-sm-7">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Tanggal Registrasi</label>
                        <input type="date" class="form-control" name="trDetail" placeholder="Enter ...">
                    </div>
                </div>
                <div class="col-sm-7">
                    <!-- text input -->
                    <div class="form-group">
                        <label>No Registrasi</label>
                        <input type="number" class="form-control" name="nrDetail" placeholder="Enter ...">
                    </div>
                </div>
                <div class="col-sm-7">
                    <!-- text input -->
                    <div class="form-group">
                        <label>Status</label>
                        <input type="text" class="form-control" name="statusDetail" placeholder="Enter ...">
                    </div>
                </div>
                <div class="col-sm-7">
                    <!-- text input -->
                    <div class="form-group">
                        <label>ISBN</label>
                        <input type="text" class="form-control" name="isbnDetail" placeholder="Enter ...">
                    </div>
                </div>

            </div>

            <div class="col-sm-7">
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>

        </form>
    </div>

    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- import data footer -->

<%- include ('../../../../partials/admin/footer') -%>